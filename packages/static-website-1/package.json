{
  "name": "static-website-1",
  "version": "0.1.0",
  "license": "",
  "author": "",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "yarn clean && yarn compile",
    "build-web": "ts-node ./src/build.ts $@",
    "clean": "rimraf ./dist && rimraf ./webDist",
    "compile": "tsc --build",
    "coverage": "jest --collect-coverage --passWithNoTests --config=./jest.config.js --runInBand",
    "deploy": "yarn build-web $@ && template deploy $@",
    "deploy-ts": "yarn build-web $@ && yarn template-ts deploy $@",
    "infra": "template infra",
    "template": "template",
    "template-ts": "ts-node scripts/template.ts",
    "test-ci": "jest --passWithNoTests --config=./jest.config.js --runInBand",
    "watch": "yarn compile && yarn build-web local && concurrently \"yarn watch-web local\" \"light-server --serve ./webDist --watchexp ./webDist/* --port 8077 --delay 500 --open\" ",
    "watch-web": "ts-node ./src/watch.ts $@"
  },
  "dependencies": {
    "gulp": "^4.0.2",
    "gulp-changed": "^4.0.2",
    "gulp-replace": "^1.0.0"
  },
  "devDependencies": {
    "@goldstack/template-static-website-aws": "0.3.105",
    "@types/gulp": "^4.0.7",
    "@types/gulp-changed": "^0.0.33",
    "@types/gulp-replace": "^0.0.31",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "concurrently": "^7.3.0",
    "jest": "^28.1.0",
    "light-server": "^2.9.1",
    "nodemon": "^2.0.15",
    "reload": "^3.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
